<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_view_pincode"
            android:layout_width="wrap_content"
            android:text="Pincode"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_view_delivry_address"
            android:layout_width="wrap_content"
            android:text="Delivery \n Address"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_view_delivery_fee"
            android:layout_width="wrap_content"
            android:text="Delivery \n Fee"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_view_delivery_time"
            android:layout_width="wrap_content"
            android:text="Delivery \n Time"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_view_min_order"
            android:layout_width="wrap_content"
            android:text="Min Order\n Amount"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>