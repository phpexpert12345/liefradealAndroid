<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="5dp"
       >



        <RelativeLayout
            android:id="@+id/rl_restaurant_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/colorWhite">



            <RelativeLayout
                android:id="@+id/h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:id="@+id/rlt_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/image"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        >

                        <ImageView
                            android:id="@+id/iv_restaurant_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@drawable/defpizzaimg" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lnr_discount_avail"
                        android:layout_below="@+id/image"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:visibility="gone"
                        android:background="@drawable/circle_background"
                        android:layout_height="@dimen/_15sdp">

                        <TextView
                            android:id="@+id/txt_discount_avail"
                            android:layout_width="match_parent"
                            android:textColor="@color/colorWhite"
                            android:text=""
                            android:textSize="@dimen/_12ssp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_toEndOf="@+id/rlt_image">

                    <RelativeLayout
                        android:id="@+id/lnr_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_140sdp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_restaurant_name"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:text="Free hjdgjgffhdj"
                            android:maxLines="2"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13ssp" />

                    </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnr_sponsered"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/sponser"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/sponsorship"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sponsored"
                                android:layout_gravity="center"
                                android:textSize="11sp"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_restaurant_cusine_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FOUR "
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/lnr_tv_name"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp" />



                    <RelativeLayout
                        android:id="@+id/rl_restaurant_minimum_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/tv_restaurant_cusine_name">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatRatingBar
                                android:id="@+id/ratingBar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:theme="@style/RatingBar" />

                            <TextView
                                android:id="@+id/tv_restaurant_total_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:text=""
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/lnr_open_close"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/circle_background"
                            android:layout_height="@dimen/_15sdp">
                            <TextView
                                android:id="@+id/tv_item_discount_open_close"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Open"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_9ssp"
                                android:padding="@dimen/_2sdp"
                                android:textStyle="normal" />
                        </LinearLayout>




                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_restaurant_minimum_order"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="-5dp">

                        <TextView
                            android:id="@+id/tv_restaurant_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="70-80 Crabtree Lane,BN15 9PJ,Lancing."
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_9ssp" />

                        <TextView
                            android:id="@+id/tv_restaurant_miles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_restaurant_address"
                            android:maxLines="1"
                            android:text="( 2.3 miles away )"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/address"
                        android:orientation="horizontal"
                        android:layout_margin="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight=".1">

                            <ImageView
                                android:id="@+id/kidred"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/timer"/>


                            <TextView
                                android:id="@+id/txt_view_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12:30"
                                android:textSize="11sp"
                                android:textColor="@color/colorBlack"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:orientation="horizontal"
                            android:layout_weight=".1">

                            <ImageView
                                android:id="@+id/petred"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginTop="3dp"
                                android:visibility="gone"
                                android:background="@drawable/bike"/>


                            <TextView
                                android:id="@+id/txt_rest_free_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Free"
                                android:layout_gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/colorBlack"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:orientation="horizontal"
                            android:layout_weight="0.1">

                            <ImageView
                                android:id="@+id/minorder"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/outline"/>



                                <TextView
                                    android:id="@+id/txt_rest_min_order"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="02.00"
                                    android:layout_gravity="center"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorBlack"
                                    android:layout_marginLeft="5dp"/>



                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>