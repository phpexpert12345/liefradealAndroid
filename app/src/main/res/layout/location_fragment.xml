<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="wrap_content"
        android:background="@drawable/gpshdpi"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_view1"
        android:layout_below="@+id/img_view"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="No delivery address selected"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12ssp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_view2"
        android:layout_below="@+id/txt_view1"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="Please select a delivery address to see the restaurant"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_10ssp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btnAddGps"
        android:layout_below="@+id/txt_view2"
        android:layout_width="match_parent"
        android:background="@drawable/rectanglehd"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Add GPS Location"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:layout_height="@dimen/_35sdp"/>


</RelativeLayout>