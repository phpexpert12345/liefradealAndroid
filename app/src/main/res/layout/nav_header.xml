<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_250"
    android:layout_height="@dimen/_150sdp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorGreenLiteh"
        android:layout_height="@dimen/_150sdp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:contentDescription="@string/nav_header_desc"
            android:background="@drawable/ic_profile" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello!"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View information"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_edit"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@drawable/ic_edit"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/btn_sign"
            android:layout_width="@dimen/_100sdp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/red_box_"
            android:layout_height="@dimen/_35sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/ic_logout"
                android:backgroundTint="@color/colorRed"
                android:layout_height="wrap_content"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:text="Sign In"
                android:textColor="@color/colorRed"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/_10sdp"
            android:layout_toRightOf="@+id/btn_sign"
            android:layout_toLeftOf="@+id/btn_signup"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/_35sdp"/>

        <LinearLayout
            android:id="@+id/btn_signup"
            android:layout_width="@dimen/_140sdp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/blue_box"
            android:layout_height="@dimen/_35sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/user"
                android:backgroundTint="@color/colorSkyBlue"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Create an Account"
                android:textColor="@color/colorSkyBlue"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
