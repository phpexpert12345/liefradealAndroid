<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_2"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_menu_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_2"
                android:text="Vegetarian Samosa"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_menu_item_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_2"
                android:text="Vegetarian Samosa"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnr_plus_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:background="@drawable/blue_box"
                android:gravity="right"
                android:layout_marginRight="@dimen/_3sdp"
                >
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/llminusplus"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:focusable="false"
                    android:layout_weight="0.8">

                    <TextView
                        android:id="@+id/iv_minus"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimaryone"
                        android:gravity="center"
                        android:text="-"
                        android:focusable="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="1"
                        android:focusable="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/iv_plus"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimaryone"
                        android:gravity="center"
                        android:text="+"
                        android:focusable="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/sp_10"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lnr_plus_minus"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="right"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="2.00"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_2"
        android:visibility="gone"
        android:orientation="horizontal"
        android:weightSum="5">


        <ImageView

            android:id="@+id/iv_minuss"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/minus" />

        <TextView
            android:id="@+id/tv_quantityy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/quantum_lightgreen"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_pluss"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:src="@drawable/plus" />
        <TextView
            android:id="@+id/tv_item_pricee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/sp_10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2.00"
            android:textColor="@color/quantum_lightgreen"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cart_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/sp_10"
            android:layout_weight="1"
            android:visibility="gone"
            android:src="@drawable/deactive" />

    </LinearLayout>

</LinearLayout>